@model Keas.Mvc.Models.ExpiringItemsViewModel

@{
    ViewData["Title"] = "ExpiringItems";
}

<h2>Expiring Items</h2>
<form asp-action="ExpiringItems">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ExpiresBefore" class="control-label"></label>
        <input asp-for="ExpiresBefore" class="form-control" />
        <span asp-validation-for="ExpiresBefore" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Refresh Report" class="btn btn-default" />
    </div>
</form>
    <table class="table">
        <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Item Name
            </th>
            <th>
                Expiration
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Keys)
            {
                <tr>
                    <td>Key</td>
                    <td>
                        @Html.DisplayFor(a => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.Assignment.ExpiresAt)
                    </td>

                </tr>
            }
            @foreach (var item in Model.Equipment)
            {
                <tr>
                    <td>Equipment</td>
                    <td>
                        @Html.DisplayFor(a => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.Assignment.ExpiresAt)
                    </td>

                </tr>
            }
            @foreach (var item in Model.Workstations)
            {
                <tr>
                    <td>Workstation</td>
                    <td>
                        @Html.DisplayFor(a => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.Assignment.ExpiresAt)
                    </td>

                </tr>
            }
        </tbody>
    </table>
