@model Keas.Mvc.Models.ExpiringItemsViewModel

@{
    ViewData["Title"] = "Expiring Items";
}

@section Styles {
    @await Html.PartialAsync("_ReportStylePartial")
}

@section Scripts {
   @await Html.PartialAsync("_ReportScriptsPartial")                             
}



<form asp-action="ExpiringAccess" method="get">
    <div class="card">
<div class="card-header-access">
  <div class="card-head">
    <h2>Expiring Access</h2>
  </div>
</div>
        <div class="card-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="shade access-color access-report">
                <div class="row align-items-end">
                    <div class="col-sm">
                      <h3>Filters</h3>
                        <div class="form-group">
                            <label asp-for="ExpiresBefore" class="control-label"></label>
                            <input style="height:34px" asp-for="ExpiresBefore" class="form-control datepicker" />
                            <span asp-validation-for="ExpiresBefore" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label asp-for="ShowInactive" class="control-label"></label>
                            <input asp-for="ShowInactive" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <i class="fas fa-sync-alt fa-sm"></i><input type="submit" value="Refresh Report" class="btn btn-link" />
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <br>
             @await Html.PartialAsync("_ItemsTablePartial.cshtml", Model)
        </div>
    </div>
</form>
