@model Keas.Mvc.Models.ExpiringItemsViewModel

@{
    ViewData["Title"] = "Expiring Items";
}

@section Scripts {
   @await Html.PartialAsync("_ScriptsPartial.cshtml", Model)                             
}


<h2>Expiring Items</h2>
<form asp-action="ExpiringWorkstations">
    <div class="card">
        <h5 class="card-head">Filters</h5>
        <div class="card-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label asp-for="ExpiresBefore" class="control-label"></label>
                            <input asp-for="ExpiresBefore" class="form-control datepiceker" />
                            <span asp-validation-for="ExpiresBefore" class="text-danger"></span>
                        </div>
                    </div>                    
                    <div class="col-sm">
                        <div class="form-group">
                            <label asp-for="ShowInactive" class="control-label"></label>
                            <input asp-for="ShowInactive" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <input type="submit" value="Refresh Report" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

 @await Html.PartialAsync("_ItemsTablePartial.cshtml", Model)