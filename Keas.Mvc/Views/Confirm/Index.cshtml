@model Keas.Mvc.Models.ConfirmListModel

@{
    ViewData["Title"] = "Confirm Assignments";
}

<h2>Confirm Assignents</h2>

<h2>Keys</h2>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Serial #</th>
        <th>Room</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Keys) {
        <tr>
            <td>@item.Name</td>
            <td>@item.SerialNumber</td>
            @if (@item.Room != null)
            {
                <td>>@item.Room.RoomName (@item.Room.RoomNumber @item.Room.BldgName)</td>
            }
            else
            {
                <td>&nbsp;</td>
            }
            
        </tr>
    }
    </tbody>
</table>

<h2>Equipment</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Serial #</th>
            <th>Make</th>
            <th>Model</th>
            <th>Room</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Equipment)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.SerialNumber</td>
                <td>@item.Make</td>
                <td>@item.Model</td>
                @if (@item.Room != null)
                {
                    <td>>@item.Room.RoomName (@item.Room.RoomNumber @item.Room.BldgName)</td>
                }
                else
                {
                    <td>&nbsp;</td>
                }
            </tr>
        }
    </tbody>
</table>
